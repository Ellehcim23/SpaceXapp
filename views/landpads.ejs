<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
</head>

<body>
    <div class="tabs is-centered">
        <ul>
          <li class="is-active" >
          <li><a href="/">Home</a></li>
          <li><a href="capsules">Capsules</a></li>
          <li><a href="cores">Cores</a></li>
          <li><a href="crew">Crew</a></li>
          <li><a href="dragons">Dragons</a></li>
          <li><a href="history">History</a></li>
          <li><a href="landpads">Landpads</a></li>
          <li><a href="launches">Launches</a></li>
          <li><a href="launchpads">Launchpads</a></li>
          <li><a href="payloads">Payloads</a></li>
          <li><a href="roadster">Roadster</a></li>
          <li><a href="rockets">Rockets</a></li>
          <li><a href="ships">Ships</a></li>
          <li><a href="starlink">Starlink</a></li>
        </ul>
    </div>
    <h1>All Landpads</h1>
    <% landpads.forEach(landpad=> { %>
        <div class="card">
            <header class="card-header">
                <p class="card-header-title">
                    <%= landpad.name %>
                </p>
                <button class="card-header-icon" aria-label="more options">
                    <span class="icon">
                        <i class="fas fa-angle-down" aria-hidden="true"></i>
                    </span>
                </button>
            </header>
            <div class="card-content">
                <div class="content">
                    <%= landpad.details %>
                        <br>
                        Type: <%= landpad.type %>
                            <br>
                </div>
            </div>
            <footer class="card-footer">
                <p>Landing Successes: <%= landpad.landing_successes %>
                </p>
                <hr>
                <a href="<%= landpad.wikipedia %>" class="card-footer-item">Wikipedia</a>
                <p>Status: <%= landpad.status %>
                </p>
            </footer>
        </div>
        <% }) %>
</body>

</html>