      <li><a href="starlink">Starlink</a></li>
    </ul>
</div>
    <h1>Dragons</h1>
    <% dragons.forEach(dragon => { %>
    <div class="card">
        <div class="card-image">
          <figure class="image is-4by3">
            <img src="<%= dragon.flickr_images[0] %>" alt="Placeholder image" width="300px" height="350px"> 
          </figure>
        </div>
        <div class="card-content">
          <div class="media">
            <div class="media-left">
              <figure class="image is-48x48">
                <img src="<%= dragon.flickr_images[1] %>" alt="Placeholder image">
              </figure>
            </div>
            <div class="media-content">
              <p class="title is-4"><%= dragon.name %></p>
              <p class="subtitle is-6">Activity Status:<%= dragon.active %></p>
            </div>
          </div>
      
          <div class="content">
            About: <%= dragon.description %>
            <br>
            <a href="<%= dragon.wikipedia %>">Wiki</a> 
            <br>
          </div>
        </div>
      </div>
    <% }) %>
</body>
</html>